update_fastlane

default_platform(:ios)

platform :ios do
  before_all do
    setup_circle_ci
  end

  desc "Runs all the tests"
  lane :test do
    scan(scheme: "PassiveDataKit")
    oclint(
      exclude_regex: /(AFNetworking|DTMHeatmap|AppAuth)
      disable_rules: [
        "PreferEarlyExit",
        "LongMethod",
        "LongVariableName",
        "HighCyclomaticComplexity",
        "HighNPathComplexity",
        "HighNcssMethod"
      ]
    )
  end

  desc "Ad-hoc build"
  lane :adhoc do
    match(type: "adhoc")
    gym(
      export_method: "ad-hoc",
      scheme: "PassiveDataKit"
    )
  end  
end
